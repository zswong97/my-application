<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    tools:context=".Task.post_task">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#04FA92"
            android:textColor="@android:color/white"
            android:text="Subject"
            />
        <TextView
            android:id="@+id/Task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_work_black_24dp"
            android:text="Task"/>

        <TextView
            android:id="@+id/Calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_today_black_24dp"
            android:text="Calendar"/>
        <TextView
            android:id="@+id/EditText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_title_black_24dp"
            android:textSize="20dp"

            android:text="Title"/>
        <TextView
            android:id="@+id/EditText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_speaker_notes_black_24dp"
            android:text="Details"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>